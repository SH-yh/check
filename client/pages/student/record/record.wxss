@import '../../../res/style/record.wxss';
.record-search{
    width:100%;
    background:#F5F5F5;
    padding-top:8px;
    padding-bottom:8px;
}
.record-search-wrap{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left:20rpx;
    margin-right: 20rpx;
    background:#fff;
    border-radius: 18px;
}
.search-input {
    flex:8;
    font-size:14px;
    margin-left:20rpx;
    border-right:1px solid #bebebe;
}
.search-btn {
    flex:1;
    width:32px;
    height:32px;
    margin-right: 10rpx;
}