.container {
    position:fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
     width:100%;
    height:100%;
}
.container-wrap{
    margin-bottom: 320rpx;
}
.check-map{
    width:100%;
    height:100%;
}
.check-random-title{
    font-size:24px;
    text-align: center;
    color:#B4617D;
    padding:10px 0;
}
.check-random{
    position: relative;
    width:80%;
    margin:40rpx auto;
}
.random-number{
    display: inline-block;
    width:24%;
    height:112rpx;
    line-height: 112rpx;
    border-right:1px solid #ddd;
    background:#F8F8F8;
    text-align: center;
    vertical-align: middle;
}
.random-number:last-child{
    border-right-width:0;
}
.randomInput {
    position:absolute;
    top:0;
    left: 0;
    width:24%;
    height:112rpx;
    color:transparent;
}
.check-btn{
    display: block;
    width:128rpx;
    height:128rpx;
    background:#B4617D;
    border-radius: 50%;
    border:2rpx solid #F0F0F0;
    color:#fff;
    line-height: 128rpx;
    text-align: center;
    margin:0 auto;
}

.keyboard-row-item {
    flex: 1;
    display: flex;
    flex-direction: row;
}
.keyboard{
    display: flex;
    flex-direction: column;
    width:90%;
    position: absolute;
    height:320rpx;
    bottom:0;left:0;right:0;
    margin:auto;
}
.key-item{
    display: block;
    flex:1;
    height:80rpx;
    line-height: 80rpx;
    border-right:1px solid #F0F0F0;
    border-bottom:1px solid #F0F0F0;
    text-align: center;
}
.key-item:last-child{
    border-right-width:0px;
}