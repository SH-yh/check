.container{
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.time-container {
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  color:#B5627E;
}
.time-date, .time-week {
  text-align: center;
}
.time-date {
  font-size: 24px;
}
.time-week {
  font-size: 20px;
}
/*课程列表*/
.course-tip {
    color: #333;
    font-size: 18px;
    margin-top:15px;
    margin-bottom: 15px;
}
.course-list-item {
    width:75%;
    padding-top:8px;
    padding-bottom:8px;
    background:#B5627E;
    margin-left:20rpx;
    margin-right:20rpx;
    border-radius: 8px;
}
.course-list, .course-list-item, .course-next{
    display: flex;
    flex-direction: column;
    text-align: center;
    color: #fff;
    align-items: center;
}
.list-item {
    padding-top:8px;
    padding-bottom:8px;
    margin-left:20rpx;
    margin-right:20rpx;
}
.course-name{
    font-size: 24px;
}
.course-first-wish{
    font-size:18px;
}
