.time-container {
  display: flex;
  flex-direction: column;
  margin-top:10px;
  color:#B5627E;
}
.time-date, .time-week {
  text-align: center;
}
.time-date {
  font-size: 24px;
}
.time-week {
  font-size: 20px;
}
/*课程列表*/
.course-tip {
    color: #333;
    font-size: 18px;
    margin-top:15px;
    margin-bottom: 15px;
}
.course-list-item {
    padding-top:8px;
    padding-bottom:8px;
}
.course-list, .course-first, .course-next{
    display: flex;
    flex-direction: column;
    text-align: center;
    color: #fff;
}
.course-first, .course-next {
    margin-left:20rpx;
    margin-right:20rpx;
}
.course-first {
    background: #66CDFF;
}
.course-next {
   background: #DE5899;
}
.list-item {
    padding-top:8px;
    padding-bottom:8px;
    margin-left:20rpx;
    margin-right:20rpx;
}
.course-first-name, .course-next-name{
    font-size: 24px;
}